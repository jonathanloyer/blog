<?php

namespace App\Form;

use Symfony\Component\Form\AbstractType;
use Symfony\Component\Form\Extension\Core\Type\SubmitType;
use Symfony\Component\Form\FormBuilderInterface;
use Symfony\Component\Validator\Constraints as Assert;
use Symfony\Component\Form\Extension\Core\Type\EmailType;
use Symfony\Component\Form\Extension\Core\Type\TextType;
use Webmozart\Assert\Assert as AssertAssert;

class HomeForm extends AbstractType
{
    function buildForm(FormBuilderInterface $builder, array $options)
    {
        $builder->setMethod('POST');
        $builder->setAttributes(['class' => "MonId"]);
        $builder
        ->add(
            'email',
            EmailType::class,
            ['attr'=>['placeholder' => "Entrez vÃ´tre email"],
            "constraints" => [
                new Assert\Email(['message' => 'Email invalid!'])
            ]]
        )
        ->add(
            'message',
            TextType::class,
            ['attr' => ['placeholder' => "Entrez votre message"], "contraints"
            => [
                new Assert\NotBlank(['message' => 'message obligatoire'])
            ]]
            
        )
        ->add(
            'Envoyer',
            SubmitType::class,
            ["attr" => ['class' => "button"]]
        );
    }
}